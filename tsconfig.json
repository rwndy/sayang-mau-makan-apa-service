{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    "outDir": "./dist",
    "rootDir": ".",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,

    "sourceMap": true,

    "types": ["jest", "node"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}